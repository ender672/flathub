{
  "app-id" : "org.squirrelsql.squirrelsql",
  "runtime" : "org.gnome.Platform",
  "runtime-version" : "3.38",
  "sdk" : "org.gnome.Sdk",
  "sdk-extensions" : ["org.freedesktop.Sdk.Extension.openjdk11"],
  "command": "squirrel-sql",
  "finish-args" : [
    "--share=ipc",
    "--socket=x11",
    "--share=network",
    "--persist=.squirrel-sql"
  ],
  "modules" : [
    {
      "name" : "openjdk",
      "buildsystem" : "simple",
      "build-commands" : [ "/usr/lib/sdk/openjdk11/install.sh" ]
    },
    {
      "name" : "mariadb-java-connector",
      "buildsystem" : "simple",
      "build-commands" : [
        "mkdir -p /app/mariadb-java-connector",
        "cp mariadb-java-client-2.7.2.jar /app/mariadb-java-connector/mariadb-java-client.jar"],
      "sources": [{
        "type": "file",
        "url": "https://dlm.mariadb.com/1496775/Connectors/java/connector-java-2.7.2/mariadb-java-client-2.7.2.jar",
        "sha256": "a3f6776df0842cf65e7f158515012d5307da949f66042282e1ee4474dd19f448"
      }]
    },
    {
      "name": "squirrelsql",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/squirrelsql",
        "cp -r * /app/squirrelsql",
        "install -Dm644 icons/acorn.png /app/share/icons/hicolor/512x512/apps/org.squirrelsql.squirrelsql.png"
      ],
      "sources": [{
        "type": "archive",
        "url": "https://downloads.sourceforge.net/project/squirrel-sql/1-stable/4.1.0-plainzip/squirrelsql-4.1.0-standard.zip",
        "dest-filename": "squirrelsql-standard.zip",
        "sha256": "6622f300bc159a51881f74e97efe6fa8388dc48e713a3657b1313305d466275a"
      }]
    },
    {
      "name": "squirrelsql-startup",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 squirrel-sql /app/bin/squirrel-sql",
        "install -Dm644 org.squirrelsql.squirrelsql.appdata.xml /app/share/metainfo/org.squirrelsql.squirrelsql.appdata.xml",
        "install -Dm644 org.squirrelsql.squirrelsql.desktop /app/share/applications/org.squirrelsql.squirrelsql.desktop"
      ],
      "sources": [
        {
          "type": "file",
          "path": "squirrel-sql"
        },
        {
          "type": "file",
          "path": "org.squirrelsql.squirrelsql.appdata.xml"
        },
        {
          "type": "file",
          "path": "org.squirrelsql.squirrelsql.desktop"
        }
      ]
    }
  ]
}
